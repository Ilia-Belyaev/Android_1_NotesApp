<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/note_phone"
    android:orientation="vertical"
    android:padding="@dimen/default_padding"
    tools:context=".NoteFragment">

    <EditText
        android:id="@+id/theme_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/theme"
        android:inputType="text" />

    <EditText
        android:id="@+id/description_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/description_note"
        android:inputType="text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="@string/save_button"
        app:backgroundTint="@color/save_button_color"
        app:cornerRadius="@dimen/corner_radius_button" />


</LinearLayout>